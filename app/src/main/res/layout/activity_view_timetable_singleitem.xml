<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_marginTop="7dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromtime"

            android:textSize="16sp"
            android:layout_marginLeft="20dp">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totime"
            android:textSize="10sp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="29dp">
            </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject1"
            android:text="subject"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/fromtime"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/fromtime"
            android:text="room no1"
            android:textSize="12sp"></TextView>


<!--period 2-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromtime2"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp">
        </TextView>


        <TextView
            android:id="@+id/totime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="90dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject2"
            android:text="subject"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/fromtime2"
            android:layout_marginLeft="30dp"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/room2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/fromtime2"
            android:text="room no"
            android:textSize="12sp"></TextView>

        <!--period 3-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromtime3"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="20dp">
        </TextView>


        <TextView
            android:id="@+id/totime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="148dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject3"
            android:text="subject"
            android:textStyle="bold"
            android:layout_marginTop="130dp"
            android:layout_toRightOf="@+id/fromtime2"
            android:layout_marginLeft="30dp"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/room3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="149dp"
            android:layout_toRightOf="@+id/fromtime2"
            android:text="room no"
            android:textSize="12sp"></TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
