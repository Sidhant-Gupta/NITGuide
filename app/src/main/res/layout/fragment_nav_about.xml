<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.navAbout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_contactDep"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pay"
                android:id="@+id/img_contact" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_heading"
                android:text="Nit Guide"

                android:layout_toRightOf="@+id/img_contact"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_subheading"
                android:text="Guide for Nit KKR "
                android:layout_toRightOf="@+id/img_contact"
                android:layout_below="@+id/tv_heading"
                android:layout_marginLeft="10dp"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/feedback"
                android:layout_margin="10dp"
                android:layout_below="@+id/img_contact"
                android:id="@+id/img_feedback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_fback"
                android:text="FeedBack"

                android:layout_toRightOf="@+id/img_feedback"
                android:layout_below="@+id/img_contact"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_fbackdesc"
                android:text="Suggestions are always welcomed :)"
                android:layout_marginLeft="10dp"

                android:layout_toRightOf="@+id/img_bug"
                android:layout_below="@+id/tv_fback"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bug"
                android:layout_margin="10dp"
                android:layout_below="@+id/img_feedback"
                android:id="@+id/img_bug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_bug"
                android:text="Report Bugs/Help"

                android:layout_toRightOf="@+id/img_bug"
                android:layout_below="@+id/img_feedback"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_bugdesc"
                android:text="I'd rather eat bugs than do drugs."
                android:layout_marginLeft="10dp"

                android:layout_toRightOf="@+id/img_bug"
                android:layout_below="@+id/tv_bug"
                android:textSize="12dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv_team"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/cv_contactDep"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/team"
                android:layout_margin="10dp"
                android:id="@+id/img_team"
                />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Team"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_toRightOf="@id/img_team"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_contactUs"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_below="@+id/img_team"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>